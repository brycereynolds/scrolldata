@import '../../../table/RowActions.styl'
@import '../material.styl'

.actions
    background #fff
    position absolute
    align-self flex-start

.enabled.action:hover
    .icon
        opacity .99
        color #000

.action
    margin 1px 0
.icon
    @extend .material-icon
    font-size 1.5em
    padding 5px


.disabled.action
    .icon, .label
        opacity .7
    cursor normal

.action-menu
    .enabled:hover
        background-color rgba(0,0,0,.15)

.action-menu
    right 0
