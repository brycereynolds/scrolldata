.container
    display inline-block
    position relative
    overflow-y scroll

.scroller
    position relative
    left: 0
    box-sizing border-box
    overflow scroll
    -webkit-overflow-scrolling: auto


.viewport
    box-sizing border-box
    width 100%
    top 0
    left 0
    position absolute
    will-change transform, top

.sizer
   top 0
   left 0
   width 100%
   position absolute

html, body
    height: 105%
