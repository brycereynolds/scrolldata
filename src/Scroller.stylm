.container

.scroller
    position relative
    box-sizing border-box
    overflow-y scroll
    top 0
    outline 1px solid blue
    -webkit-overflow-scrolling: auto

.sizer
    outline 1px solid purple

.viewport
    box-sizing border-box
    transform translate3d(0, 0, 0)
    will-change transform
    1px solid green
    width 100%

html, body
    height: 100%
