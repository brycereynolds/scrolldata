.container
    display flex
    flex-direction row
    position absolute
    background #fff
    color rgb(33, 33, 33)
    right 0
    transform-origin center right
    align-items center
    transition transform .1s linear
    z-index 1
    list-style none
    flex-wrap nowrap
    align-items space-between
    height 100%
    padding 0
    margin 0

    > li
        margin 0
        height 100%

//Label is here just for aria and for convience.
.label
    display inline-block
    height 1
    width 1
    top 200vw
    opacity .01
    position absolute

.action, .menu-item
    display flex
    align-items center
    padding 0 10px
    pointer cursor
    
.action:hover
    background-color rgba(0, 0, 0, .1)

.action-menu
    display none
    position absolute
    top 80%
    flex-direction column
    margin 0
    padding 5px 0
    position absolute
    cursor default
    right 0
    background-color #fff
    border-radius 2px
    box-shadow 0 0 6px rgba(0,0,0,.16), 0 6px 12px rgba(0,0,0,.32)
    color #757575
    list-style none
    line-height 32px
    margin 0
    min-width 250px
    outline none
    text-align left
    white-space nowrap
    z-index 20

.menu-item:active, .menu-item.active
    .action-menu
        display flex

    .label
        display inline
        position relative
        top inherit
        opacity .99
        height auto
        width auto

    .icon
        padding 0

    .icon + .label
        padding 3px 0 0 10px

    .action
        border-bottom 1px solid rgba(0, 0, 0, .2)

    .action:last-child
        border-bottom 1px solid rgba(0, 0, 0, 0)

.icon
    position: relative
    top: 1px
    display: inline-block
    font-family: 'Glyphicons Halflings'
    font-style: normal
    font-weight: normal
    line-height: 1
    -webkit-font-smoothing: antialiased
    font-size 1.5rem
    padding 0 10px

.icon-vertical:before 
    content: "\E235"


