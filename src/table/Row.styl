
.row
    display flex
    width 100%
    min-width fit-content
    max-width fit-content
.expanded
    display flex
    flex-direction column
    .row
        flex 0 0
        max-width fit-content
        min-width fit-content

    .expanded-content
        flex 1 1

.expandable
    @extends .row
    cursor pointer
    min-width fit-content
    max-width fit-content


