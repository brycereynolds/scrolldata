@require './Row.styl'

.blank-row
    @extends .row

.virtualized, .none, .intersection {
    //do not remove comment
    no-such-prop none
}

.cell-headers
    display flex
    flex-direction row
    min-width fit-content
    background-color: white
    border-bottom: 1px solid #ccc;

.cell-headers
    position sticky
    left 0
    top 0
    z-index 1

.cell-header
    min-height 20px
    display flex
    justify-content center
    align-items center
    color #9e9e9e
    font-weight 500
    cursor pointer

.status
    padding 0

.container
    box-sizing border-box
    *
        box-sizing border-box

.scroll-rows
    -webkit-overflow-scrolling touch;
    padding-right 0
    overflow-x: auto;
    overflow-y: visible;

.cell-header-select
    height 100%
    padding 15px 0 10px 0

.selectable
    display flex
