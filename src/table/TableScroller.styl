@require './Row.styl'

.blank-row
    @extends .row

.cell-headers
    display flex
    margin-bottom 15px
    flex-direction row
    width 100%

.cell-header
    min-height 20px
    display flex
    justify-content center
    align-items center
    color #9e9e9e
    font-weight 500
    cursor pointer

.status
    padding 0



.container
    box-sizing border-box
    *
        box-sizing border-box


.scroll-rows
    overflow-y visible;
    overflow-x auto;
    -webkit-overflow-scrolling touch;
    padding-right 0


.scroll-list
    position relative
    overflow auto
    -webkit-box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12)
    box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12)
    float left
    background #fff
    width 100%

.unvirtualized-scroll-list
    @extend .scroll-list
    position static

.cell-header-select
    height 100%
    padding 15px 0 10px 0
