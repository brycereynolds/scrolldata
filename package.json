{
  "name": "scrolldata",
  "version": "5.0.2",
  "description": "Table and virtualization help for tabular data",
  "main": "lib",
  "source": "src",
  "dependencies": {},
  "author": "Justin Spears <speajus@gmail.com>",
  "license": "BSD",
  "devDependencies": {
    "chai": "^4.1.2",
    "hint.css": "^2.5.0",
    "mrbuilder": "^2.1.1",
    "mrbuilder-plugin-clean": "^2.1.1",
    "mrbuilder-plugin-emeth": "^2.1.1",
    "mrbuilder-plugin-less": "^2.1.1",
    "mrbuilder-plugin-stylus": "^2.1.1",
    "mrbuilder-preset-dev": "^2.1.1",
    "mrbuilder-preset-lib": "^2.1.1",
    "mrbuilder-preset-test": "^2.1.1"
  },
  "peerDependencies": {
    "emeth": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*"
  },
  "scripts": {
    "karma": "mrbuilder",
    "test": "mrbuilder",
    "start": "mrbuilder",
    "styleguide": "mrbuilder",
    "start:styleguide": "mrbuilder",
    "demo": "mrbuilder",
    "lib": "MRBUILDER_ENV=lib mrbuilder",
    "gh-pages": "git add docs && git subtree push --prefix docs origin gh-pages",
    "build": "$npm_execpath run styleguide && $npm_execpath run demo &&  $npm_execpath run lib",
    "prepublishOnly": "$npm_execpath run lib"
  },
  "mrbuilder": {
    "presets": [
      "mrbuilder-preset-lib"
    ],
    "plugins": [
      "mrbuilder-plugin-emeth",
      "mrbuilder-plugin-stylus",
      "mrbuilder-plugin-clean",
      "mrbuilder-plugin-react",
      [
        "mrbuilder-plugin-less",
        false
      ],
      [
        "mrbuilder-plugin-css",
        {
          "useNameHash": "style.css",
          "useStyleLoader": false
        }
      ]
    ],
    "env": {
      "lib": {
        "plugins": [
          [
            "mrbuilder-plugin-webpack",
            {
              "useExternals": true,
              "devtool": "source-map",
              "libraryTarget": "umd",
              "mode": "none",
              "outputPath": "./lib",
              "output": {
                "globalObject": "this"
              }
            }
          ]
        ]
      },
      "styleguide": {
        "plugins": [
          [
            "mrbuilder-plugin-clean",
            {
              "paths": [
                "docs"
              ]
            }
          ],
          [
            "mrbuilder-plugin-webpack",
            {
              "demo": "./docs"
            }
          ]
        ]
      },
      "demo": {
        "plugins": [
          [
            "mrbuilder-plugin-css",
            {
              "useNameHash": "[hash].style.css",
              "useStyleLoader": false
            }
          ],
          [
            "mrbuilder-plugin-webpack",
            {
              "demo": "./docs/demo",
              "entry": {
                "index": "./public/index"
              }
            }
          ],
          [
            "mrbuilder-plugin-html",
            {
              "exported": true
            }
          ],
          [
            "mrbuilder-plugin-clean",
            false
          ]
        ]
      },
      "development": {
        "presets": [
          "mrbuilder-preset-dev"
        ]
      },
      "test": {
        "plugins": [
          [
            "mrbuilder-plugin-css",
            {
              "useStyleLoader": true
            }
          ],
          [
            "mrbuilder-plugin-hot",
            false
          ],
          "mrbuilder-plugin-stylus"
        ]
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
